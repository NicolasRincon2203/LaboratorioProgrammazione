# Disegna un triangolo con le stringe
package main 

import "fmt"

func main() {// disegna un triangolo equilatero di dimensioni n 
	n := 10
	// Ciascuna riga Ã¨ lunga 2n-1
	for i := 0; i < n ; i++ {
		for j := 0 ; j < n-1-i ; j++ {//stampo X spazi 
		fmt.Print(" ")
		}
		for j := 0; j < 2*i+1; j++ {//stampo Y asteristichi 
			fmt.Print("*")
		}
		fmt.Println()
	}
	fmt.Println()
} 
